<%-include('partials/header.ejs')  %>
<main class="mb-4">
    <div class="container my-5">
        <div class="grid-container mx-auto">
            <%[...blogs].reverse().map((e,i) =>{%>
                <%if(e.description){%>
                    <div class="card mb-3 mb-md-0 rounded-0 ">
                        <img src="<%=e.thumbNail%>" class="card-img-top rounded-0" alt="<%=e.title%>" height="200" style="object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title trirong-medium-italic"><%=e.title%></h5>
                            <p class="card-text trirong-light-italic"><%= e.description.length > 100? e.description.slice(0,e.description.lastIndexOf(" ",100))+"..." : e.description %></p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Last updated 3 mins ago</small>
                        </div>
                    </div>
                <%}%>
            <%})%>
        </div>
    </div>
</main>
<%-include('partials/footer.ejs')  %>